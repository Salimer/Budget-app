<div class="flex flex-col h-screen justify-between">
  <div>
    <div class="navigation py-6 px-3 blue-nav-white-text">
      <ul class="flex justify-between items-center">
        <li class="w-10"><%= link_to image_tag('backarrow.png', alt: 'Back'), categories_path, class: 'nav-link' %></li>
        <h2><strong><%= @category.name %></strong></h2>
        <li><%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %></li>
      </ul>
    </div>
    <p style="color: green"><%= notice %></p>

    <%= render @category %>
    <section class="px-5">
      <div id="purchases">
        <% @purchases.each do |purchase| %>
          <a href="<%= category_purchase_path(@category, purchase) %>" class="m-1">
          <%= render "purchases/purchase", purchase: purchase %>
          </a>
        <% end %>
      </div>
    </section>
  </div>

  <section class="text-center mt-4">
    <%= link_to new_category_purchase_path(@category) do %>
      <div class="w-full green-btn flex">
        <button data-testid="new-purchase-button" class="p-2 py-4 m-4 text-lg w-full border-2 green-btn rounded hover:bg-green-600 focus:outline-none focus:bg-green-600">
          <strong>Add a new transaction</strong>
        </button>
      </div>
    <% end %>
  </section>
  </div>
